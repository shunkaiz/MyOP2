<div class="signupBox">
	<form id="signupForm" action="/users/signup" method="post">
		<ul>
			<li class="inputContent">
				<div class="inputInfo"></span>Username：</div>
				<input name="username" id="signupUsername" class="inputValue" type="text"  maxlength="20" style="" data-toggle="popover" data-placement="right" data-content="At least 6 chars">
				<div class="glyIcon"></div>										
			</li>
			<li class="inputContent" id="emaili">
				<div class="inputInfo"></span>E-mail：</div>
				<input name="email" id="signupEmail" class="inputValue" type="email"  maxlength="50"  data-toggle="popover" data-placement="right" data-content="Please enter your email in correct form">
				<div class="glyIcon"></div>		
			</li>
			<li class="inputContent" id="ycodeli">		
				<div class="inputInfo"></span>Verify Code：</div>
				<div class="verifyBox">
					<div class="btn btn-success" id="v-email">Click Me</div>
				</div>
				<input name="ycode" id="ycode" class="inputValue" type="text"  maxlength="20"  data-toggle="popover"
				data-placement="right" data-content="Please enter 4 digits">
				<div class="glyIcon"></div>		
			</li>	
			<li class="inputContent" id="signupPassword">		
				<div class="inputInfo"></span>Password：</div>
				<input name="psw" id="password" class="inputValue" type="text"  maxlength="20" data-toggle="popover" data-placement="right" data-content="Make sure password fortmat is correct">
				<div class="glyIcon"></div>		
			</li>		
			<li class="inputContent">		
				<div class="inputInfo"></span>Re-Password：</div>
				<input name="repsw" id="repsw" class="inputValue" type="text"  maxlength="20" data-toggle="popover"
				data-placement="right" data-content="Please enter the password above">
				<div class="glyIcon"></div>		
			</li>	
			<li class="inputContent">
				<button type="submit" class="btn btn-default" id="signupSubmit">Submit</button> 
			</li>				
		</ul>			
	</form>	 
	{{#if errors}}
		{{#each errors}}
			<div class="alert alert-danger">{{msg}}</div>
		{{/each}}
	{{/if }}       	
</div>