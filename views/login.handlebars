<form id="loginForm" action="/users/login" method="Post">
	<ul>
		<li class="inputContent">
			<div class="inputInfo">Username：</div>
			<input name="username" id="loginUsername" class="inputValue" type="text"  maxlength="20" style="" data-toggle="popover" data-placement="right" data-content="At least 6 characters">
			<div class="glyIcon"></div>								
		</li>
		<li class="inputContent">		
			<div class="inputInfo">Password：</div>
			<input name="password" id="loginPassword" class="inputValue" type="password"  maxlength="20" data-toggle="popover" data-placement="right" data-content="Password cannot be empty">
			<div class="glyIcon"></div>		
		</li>		
		<li class="inputContent">
			<div class="inputInfo"></div>
			<div class="verifyBox">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
			<div style="width: 40px"></div>		
		</li>			
	</ul>
</form>	            	